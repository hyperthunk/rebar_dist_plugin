
{escript_name, "priv/bin/custom-app"}.

{deps, [
    {rebar_dist_plugin, ".*",
        {git, "../../../../../", "master"}}
]}.

{plugins, [rebar_dist_plugin]}.

%% {plugin_dir, "../../src"}.

{dist, [
    {format, tar},
    {outdir, "target"},  %% overrides default value `dist'
    {workdir, "/tmp/dist/.work"},
    %% our `rebar escript' output ends up here
    {incl_files, ["priv/bin/*"]},
    {vars_file, "myvars.vars"}
]}.
